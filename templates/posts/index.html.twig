{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <h2 class="text-center my-4">Post Listing</h2>
        <hr>
        <div class="row">
            {% for post in posts %}
                <div class="col-4 mb-4">
                    <div class="card h-100">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">{{ post.title }}</h5>
                            <p class="card-text flex-fill">{{ post.content }}</p>
                            <a class="btn btn-success" style="width:fit-content" href="{{ path('app_post_edit', {'id': post.id}) }}">Edit</a>
                        </div>
                        <div class="card-footer">
                            {% for tag in post.tags %}
                                <span class="badge text-bg-primary">{{ tag.name }}</span>
                            {% endfor %}
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}